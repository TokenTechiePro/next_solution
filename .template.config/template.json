  "classifications": [ "Web", "ASP.NET" ],
  "identity": "NextSolution.Template",
  "name": "Next Solution (ASP.NET API)",
  "description": "A starter solution template for rapidly creating a modern, efficient codebase for your upcoming application.",
  "shortName": "nextsoln",
