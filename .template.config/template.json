{
  "$schema": "http://json.schemastore.org/template",
  "author": "@prince272",
  "classifications": ["Web", "ASP.NET"],
  "identity": "NextSolution.Template",
  "name": "Next Solution (ASP.NET API)",
  "description": "A starter solution template for rapidly creating a modern, efficient codebase for your upcoming application.",
  "shortName": "nextsoln",
  "sourceName": "Next-Solution",
  "preferNameDirectory": true,
  "guids": [
    "1A114D3A-52AA-408F-ACFE-89A437A9BCC4",
    "24FBFF44-2F91-4C05-BBDE-6FB7E43EF1B3"
  ],
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/*.filelist",
        "**/*.lock.json",
        "**/*.rsuser",
        "**/*.suo",
        "**/*.user",
        "**/*.userosscache",
        "**/*.sln.docstates",
        "**/[Dd]ebug/**",
        "**/[Dd]ebugPublic/**",
        "**/[Rr]elease/**",
        "**/[Rr]eleases/**",
        "**/x64/**",
        "**/x86/**",
        "**/[Ww][Ii][Nn]32/**",
        "**/[Aa][Rr][Mm]/**",
        "**/[Aa][Rr][Mm]64/**",
        "**/bld/**",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/[Oo]ut/**",
        "**/[Ll]og/**",
        "**/[Ll]ogs/**",
        ".template.config/**/*",
        "**/.vs/**",
        "**/.git/**",
        "**/*.gitattributes",
        "**/*.gitignore",
        "**/*.nuspec"
      ],
      "modifiers": [
        {
          "condition": "(!includeExpoProject)",
          "exclude": ["src/Next-Solution.ExpoApp/**/*"]
        },
        {
          "condition": "(!includeNextProject)",
          "exclude": ["src/Next-Solution.NextApp/**/*"]
        }
      ]
    }
  ],
  "symbols": {
    "title": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "title",
      "replaces": "Next Solution"
    },
    "slug": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "slug",
      "replaces": "next-solution"
    },
    "includeExpoProject": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Expo Project in Solution",
      "description": "Adds an Expo project to the solution.",
      "defaultValue": "true"
    },
    "includeNextProject": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Next.js Project in Solution",
      "description": "Adds a Next.js project to the solution.",
      "defaultValue": "false"
    },
    "configureNgrok": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Configure Ngrok for Web API Tunneling",
      "description": "Enables Ngrok for tunneling the Web API.",
      "defaultValue": "true"
    },
    "httpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 5000,
        "high": 5400
      },
      "replaces": "5282"
    },
    "httpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 7000,
        "high": 7400
      },
      "replaces": "7135"
    }
  },
  "forms": {
    "slug": {
      "identifier": "chain",
      "steps": ["hyphenReplace", "lowerCase"]
    },
    "title": {
      "identifier": "chain",
      "steps": ["titleCase", "spaceReplace"]
    },
    "lowerCase": {
      "identifier": "lowerCase"
    },
    "titleCase": {
      "identifier": "titleCase"
    },
    "spaceReplace": {
      "identifier": "replace",
      "pattern": "[-_+~]",
      "replacement": " "
    },
    "hyphenReplace": {
      "identifier": "replace",
      "pattern": "([a-z0-9])([A-Z])|[^a-zA-Z0-9]+",
      "replacement": "$1-$2"
    }
  }
}
