  "preferNameDirectory": true,
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/*.filelist",
        "**/*.lock.json",
        "**/*.rsuser",
        "**/*.suo",
        "**/*.user",
        "**/*.userosscache",
        "**/*.sln.docstates",
        "**/[Dd]ebug/**",
        "**/[Dd]ebugPublic/**",
        "**/[Rr]elease/**",
        "**/[Rr]eleases/**",
        "**/x64/**",
        "**/x86/**",
        "**/[Ww][Ii][Nn]32/**",
        "**/[Aa][Rr][Mm]/**",
        "**/[Aa][Rr][Mm]64/**",
        "**/bld/**",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/[Oo]ut/**",
        "**/[Ll]og/**",
        "**/[Ll]ogs/**",
        ".template.config/**/*",
        "**/.vs/**",
        "**/.git/**",
        "**/*.gitattributes",
        "**/*.gitignore",
        "**/*.nuspec"
      ],
      "modifiers": [
        {
          "condition": "(!includeExpoProject)",
          "exclude": [ "src/Next-Solution.ExpoApp/**/*" ]
        },
        {
          "condition": "(!includeNextProject)",
          "exclude": [ "src/Next-Solution.NextApp/**/*" ]
        }

      ]
    }
  ],
  "symbols": {
    "includeExpoProject": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Expo Project in the Solution",
      "description": "Specify whether to include an Expo project as part of the solution.",
      "defaultValue": "true"
    },
    "includeNextProject": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Next.js Project in the Solution",
      "description": "Specify whether to include an Next.js project as part of the solution.",
      "defaultValue": "false"
    },
    "enableNgrok": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Enable Ngrok for Tunneling",
      "description": "Specify whether to enable Ngrok for tunneling the Web Api.",
      "defaultValue": "true"
    },
